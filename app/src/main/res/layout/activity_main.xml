<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome! Let us help you find your next book."
        android:id="@+id/tv_welcome"
        android:layout_marginTop="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/btn_InitialSetUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Initial Set Up"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40px"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log an update"
        app:layout_constraintTop_toBottomOf="@+id/btn_InitialSetUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40px"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/et_entertime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="How many hours do you
have to read per day:
(to the nearest hour)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_time"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        android:layout_marginTop="40px"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/et_time"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40px"
        app:layout_constraintLeft_toRightOf="@+id/et_entertime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
      />

    <Button
        android:id="@+id/btn_find"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="30px"
        android:text="Find A Book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_time"
        android:textSize="40dp"
        android:fontFamily="casual"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>



</android.support.constraint.ConstraintLayout>